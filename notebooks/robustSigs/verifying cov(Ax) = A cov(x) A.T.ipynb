   "source": [
    "# verifying covariance identity cov(Ax) = A cov(x) A.T "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 60,
   "id": "b7f341c0",
   "metadata": {},
   "outputs": [],
   "source": [
    "def Vcov(n, s= 10000):\n",
    "    x=randn(n, s)\n",
    "    A = rand(n, n)\n",
    "    tA= A.T\n",
    "    y = A @ x\n",
    "    lhs = cov(y)\n",
    "    rhs = A @ cov(x) @ tA\n",
    "    return allclose(lhs, rhs)"
   ]
  },
  {
